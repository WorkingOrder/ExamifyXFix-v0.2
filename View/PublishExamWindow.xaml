<Window x:Class="ExamifyX.View.PublishExamWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExamifyX.View"
        mc:Ignorable="d"
        Title="PublishExamWindow" Height="200" Width="300">
    <StackPanel Margin="10">
        <Label Content="Publish Date:"/>
        <DatePicker x:Name="PublishDate"/>
        <Label Content="Publish Time:"/>
        <TextBox x:Name="PublishTime" PreviewTextInput="PublishTime_PreviewTextInput" Text="00:00" HorizontalAlignment="Left" />
        <Button Content="Save And Publish" HorizontalAlignment="Right" Command="{Binding SetPublishTimeCommand}"/>
        <Button Content="Back" HorizontalAlignment="Right" Command="{Binding BackCommand}" Width="50" Margin="0,10"/>
    </StackPanel>
</Window>
